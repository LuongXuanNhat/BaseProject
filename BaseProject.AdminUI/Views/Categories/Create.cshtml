@model BaseProject.ViewModels.Catalog.Categories.CategoryRequest

@{
    ViewData["Title"] = "Thêm danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Thêm danh mục</h1>

<hr />
<div class="col-md-12" style="padding: 1.5rem">
    <form asp-action="Create">  
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group" style="text-align: end">
            <input type="submit" value="THÊM" class="btn btn-primary" />
            <a class="btn btn-success" asp-action="Index" asp-controller="Categories">Về danh sách</a>
        </div>
    </form>
</div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
