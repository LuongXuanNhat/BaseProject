@model BaseProject.ViewModels.Catalog.Location.LocationCreateRequest

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>
<div>
    <a asp-action="Index">Trở về</a>
</div>
<hr />
<div class="row con">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="LocationId" class="form-control" hidden readonly/>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            @{
                if (Model.ImageList != null)
                {
                    var image = Model.ImageList;
                    if (@image != null)
                    {
                        for (int i = 0; i < image.Count; i++)
                        {
                            <div class="">
                                <label class="control-label"> </label>
                                <img src="@image[i]" alt="Image" class="img-thumbnail" style="height: 80px">
                            </div>
                        }
                    }
                }
            }



            <div class="form-group">
                <label asp-for="GetImage" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="GetImage" class="custom-file-input" id="customFile" accept=".jpg,.jpeg,.png">
                </div>
                <span asp-validation-for="GetImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
