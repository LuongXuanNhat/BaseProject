@model BaseProject.ViewModels.Catalog.Location.LocationCreateRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>THÊM ĐỊA ĐIỂM</h1>



<div class="col-md-12" style="padding: 1.5rem">
    <form asp-action="Create" method="post" asp-controller="Location" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GetImage" class="control-label"></label>
            <div class="custom-file">
                <input asp-for="GetImage" class="custom-file-input" id="customFile" accept=".jpg,.jpeg,.png">
            </div>
            <span asp-validation-for="GetImage" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group" style="text-align: end">
            <input type="submit" value="THÊM" class="btn btn-primary" />
            <a class="btn btn-success" asp-action="Index" asp-controller="Location">Về danh sách</a>
        </div>
    </form>
</div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
