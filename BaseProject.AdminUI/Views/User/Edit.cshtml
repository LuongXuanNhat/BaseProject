@using BaseProject.ViewModels.System.Users;
@using BaseProject.Data.Enums;
@model BaseProject.ViewModels.System.Users.UserUpdateRequest

@{
    ViewData["Title"] = "Chỉnh sửa thông tin người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Cập nhật người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Cập nhật người dùng</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body" style="padding-left: 2.5rem; padding-right: 2.5rem">
            <div>
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @{
                            if (Model.DateOfBir != null)
                            {
                                string formattedDateOfBirth = Model.DateOfBir.ToString();
                            }

                        }
                        <label asp-for="DateOfBir" class="control-label"></label>
                        <input asp-for="DateOfBir" class="form-control" placeholder="@Html.DisplayFor(model => model.DateOfBir)" asp-format="{0:dd/MM/yyyy}" />
                        <span asp-validation-for="DateOfBir" class="text-danger"></span>
                    </div>
                    @*<select class="form-select" aria-label="Default select example">
                    <option value="0">Nam</option>
                    <option value="1">Nữ</option>
                    <option value="2">Không</option>*@
                    @*</select>*@

                    <div class="form-group">
                        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" style="padding: 4px;border-radius: 6px;"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GetImage" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="GetImage" class="custom-file-input" id="customFile" accept=".jpg,.jpeg,.png">
                        </div>
                        <span asp-validation-for="GetImage" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="text-align: end;">
                        <a class="btn btn-success" asp-action="Index" asp-controller="User">Về danh sách</a>
                        <input type="submit" value="Lưu lại" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
