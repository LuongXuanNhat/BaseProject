@using BaseProject.ViewModels.Common;
@model PagedResult<BaseProject.Data.Entities.Report>
@{
    ViewData["Title"] = "Danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Danh sách báo cáo</h1>

@section Scripts{
    <script>
        setTimeout(function () {
            $('#msgAlert').fadeOut('slow');
        }, 2000);
    </script>
}
<div class="row">
    @if (ViewBag.SuccessMsg != null)
    {
        <div id="msgAlert" class="alert alert-success" role="alert">
            @ViewBag.SuccessMsg
        </div>
    }
</div>
<div class="card mb-12">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6 col-xs-12">
                <a asp-action="Create" class="btn btn-success">Thêm danh mục</a>
            </div>
            <div class="col-md-6 col-xs-12">
                <form asp-action="Index" method="get">
                    <div class="row">
                        <div class="cold-md-3 user-search-btn" style="width: unset;">
                            <button type="submit" class="btn btn-primary">
                                Tìm
                            </button>
                            <button style="padding: 10px 24px; font-size: 15px;" type="button" onclick="window.location.href='/Categories/Index'" class="btn btn-dark"><i class="fa-solid fa-arrow-rotate-right"></i></button>
                        </div>
                        <div class="col-md-9" style="flex: 1;">
                            <input type="text" value="@ViewBag.Keyword" name="keyword" class="form-control" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr class="row no-margin">
                    <th class="col-1">
                        STT
                    </th>
                    <th class="col-4">
                        Nội dung
                    </th>
                    <th class="col-2">
                        Ngày
                    </th>

                    <th class="col-5"></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int a = 0;
                }
                @foreach (var item in Model.Items)
                {
                    a++;
                    <tr class="row no-margin">
                        <td class="col-1">
                            @a
                        </td>
                        <td class="col-4">
                            @item.Content
                        </td>
                        <td class="col-2">
                            @item.Date
                        </td>
                        <td class="col-5 row" style="">
                            <a title="Sửa" href="@($"https://localhost:7202/Posts/Details/{item.PostId}")" style="height: 40px"><i class="fa fa-edit"></i></a>
                            <a title="Xóa" href="@Url.Action("Delete", new { idCategory=item.Id })" style="height: 40px"><i class="fa-solid fa-trash-can" ></i></a>
                        </td>
                    </tr>
                }
            <td style="border-bottom: 2px solid #e9ecef; position: relative; top: -18px;"></td>

            </tbody>
        </table>
        @await Component.InvokeAsync("Pager", Model)
    </div>
</div>

