@using BaseProject.ViewModels.Catalog.Location
@model LocationVm

<link href="~/css/places_style.css" rel="stylesheet" />

<a class="destination-item" asp-action="Detail" asp-route-ID="@Model.LocationId" asp-controller="Place" style="padding-bottom: 5px;text-decoration: none;color:black;">
    <img src="@Model.ImageList" alt="Điểm đến @Model.Name">
    <h3 style="display: block; text-align: center; color: darkblue">@Model.Name</h3>
    <p style="font-size: 14px;max-height:3em">@Model.Address </p>
</a>
