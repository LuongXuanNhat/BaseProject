@model BaseProject.ViewModels.System.Users.LoginRequest
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/BaseProject.WebApp.styles.css" asp-append-version="true" />

<main>
    <section class="vh-100 addImageLogin">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="~/images/lankmark81.jpg" 
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-2 col-lg-7 d-flex align-items-center" style="padding-left:100px">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form asp-action="Login" asp-controller="Account" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <a asp-controller="Home" asp-action="Index" style="padding-left:100px">
                                                <img style="border-image:space" width="170" height="60" src="~/images/logo_review.jpg" />
                                            </a>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Đăng nhập tài khoản của bạn</h5>

                                        <div class="form-outline mb-4" style="max-width:300px">
                                            <input class="form-control" asp-for="UserName" type="text" placeholder="Nhập tên tài khoản" />
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4" style="max-width:300px">
                                            <input class="form-control" asp-for="Password" type="password" placeholder="Nhập mật khẩu" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block" type="submit">Đăng nhập</button>
                                        </div>

                                        <a class="small text-muted" href="#!">Quên mật khẩu?</a>
                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                            Bạn chưa có tài khoản? <a asp-controller="Account" asp-action="Register"
                                                                      style="color: #393f81;">Đăng ký ở đây</a>
                                        </p>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

