@model BaseProject.ViewModels.System.Users.RegisterRequest

@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/BaseProject.WebApp.styles.css" asp-append-version="true" />

<main>
    <section class="vh-100" style="background-color: #ffcce6;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="~/images/bitexco.jpg"
                                     alt="register form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-2 col-lg-7 d-flex align-items-center" style="padding-left:100px">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form asp-action="Register">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <a asp-controller="Home" asp-action="Index" style="padding-left:70px">
                                                <img style="border-image:space" width="170" height="60" src="~/images/logo_review.jpg" />
                                            </a>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Tạo tài khoản của riêng bạn</h5>

                                        <div class="form-outline mb-4" style="max-width:300px">
                                            <input asp-for="UserName" class="form-control" placeholder="Nhập tên tài khoản" />
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4" style="max-width:300px">
                                            <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4" style="max-width:300px">
                                            <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4" style="max-width:300px">
                                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu" />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block" type="submit">Đăng ký</button>
                                        </div>

                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
